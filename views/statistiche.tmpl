    function showprimitive(name) {
        $('.linked').fadeOut('slow', function() {
            $('#tagshow').fadeOut('slow');
            $('div[name="'+name+'"]').fadeIn('slow');
        });
    }

    function showtaglist(tag) {
        var i = 0;
        $('.linked').fadeOut('slow');
        $("ul#tagshow").fadeOut('slow', function() {
            $("ul#tagshow").replaceWith('<ul id="tagshow"></ul>');
            $("div[name='"+tag+"']").children("div").children("a").each(function(index) {
                i += 1;
                $("ul#tagshow").append("<li style=\"display:inline; margin:5px;\"><a href=\"#\" onclick=\"javascript:showtag('"+$(this).attr("name")+"');\">"+$(this).attr("name")+"</a></li>");
                if ((i % 5) == 0) {
                    $("ul#tagshow").append("<br /"+">");
                }
            });
            $("ul#tagshow").fadeIn('slow');
        });
    }

    function showtag(tag) {
        $('.linked').hide();
        $('.feature').hide();
        $('a[name="'+tag+'"]').parents('.linked').fadeIn('slow', function() {
            $('a[name="'+tag+'"]').parent('.feature').show();
        });
    }
//-->
</script>
<link rel="stylesheet" type="text/css" href="osmstats_style.css" />
</head>
<body>
<div align="center">
<h1>Statistiche OpenStreetMap Italia ${date}</h1>
<ul id="links" style="display: inline;"></ul>
<ul id="tagshow"></ul>
<div py:def="feature(name, data)" name="${name}" class="linked primitive">
<a name="${name}"></a><h3>${name}</h3>
<table class="tablesorter">
<thead>
<tr>
  <th>Posizione</th>
  <th>&nbsp;</th>
  <th>Utente</th>
  <th>Totale</th>
</tr>
</thead>
<tbody>
<py:for each="count, pair in data">
<tr>
  <td>${count + 1}</td>
  <py:choose test="">
    <py:when test="pos_primitives[name][pair[0]] &lt; 0">
      <td><img src="img/down.png" /> ${abs(pos_primitives[name][pair[0]])}</td>
    </py:when>
    <py:when test="pos_primitives[name][pair[0]] &gt; 0">
      <td><img src="img/up.png" /> ${pos_primitives[name][pair[0]]}</td>
    </py:when>
    <py:when test="pos_primitives[name][pair[0]] == 0">
      <td><img src="img/stable.png" /></td>
    </py:when>
  </py:choose>
  <td>${pair[0]}</td>
  <td>${pair[1]}</td>
</tr>
</py:for>
</tbody>
</table>
</div>
<div py:def="key(key, value, data)" class="feature">
<a name="${key}=${value}"></a><h4>${key}=${value}</h4>
<table class="tablesorter">
<thead>
<tr>
  <th>Posizione</th>
  <th>&nbsp;</th>
  <th>Utente</th>
  <th>Totale</th>
</tr>
</thead>
<tbody>
<py:for each="count, pair in data">
<tr>
  <td>${count + 1}</td>
  <py:choose test="">
    <py:when test="pos_tags[key][value][pair[0]] &lt; 0">
      <td><img src="img/down.png" /> ${abs(pos_tags[key][value][pair[0]])}</td>
    </py:when>
    <py:when test="pos_tags[key][value][pair[0]] &gt; 0">
      <td><img src="img/up.png" /> ${pos_tags[key][value][pair[0]]}</td>
    </py:when>
    <py:when test="pos_tags[key][value][pair[0]] == 0">
      <td><img src="img/stable.png" /></td>
    </py:when>
  </py:choose>
  <td>${pair[0]}</td>
  <td>${pair[1]}</td>
</tr>
</py:for>
</tbody>
</table>
</div>
${feature('Nodi', nodes)}
${feature('Ways', ways)}
${feature('Relazioni', relations)}
<py:for each="tag in sorted(tags.keys())">
  <div name="${tag}" class="linked">
  <a name="${tag}"></a><h3>${tag}</h3>
  <py:for each="val in sorted(tags[tag].keys())">
  ${key(tag, val, tags[tag][val])}
  </py:for>
  </div>
</py:for>
</div>
</body>
</html>
